<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <meta charset="utf-8">
    <link rel="icon" href="~/Content/images/favicon.ico">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" />
    <link rel="stylesheet" href="~/Content/css/style.css">
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/Content/js/jquery.equalheights.js"></script>
    <script src="~/Content/js/jquery.ui.totop.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <script>
        $(document).ready(function () {
            $(".block1").mouseover(function () {
                $(this).addClass("blur");
            });
            $(".block1").mouseout(function () {
                $(this).removeClass("blur");
            });
            $().UItoTop({ easingType: 'easeOutQuart' });
        })
    </script>

</head>
<body class="page1">
    <!--==============================header=================================-->


    <header>
        <div class="container_12">
            <div class="grid_12" style="text-align:center">
                @if (Session["TaiKhoan"] != null)
                {
                    <ul>
                        <li>
                            Xin chào: @Session["HoTen"].ToString()
                        </li>
                        <li>
                            @Html.ActionLink("Đăng xuất", "Login", "NhanVien")
                        </li>
                    </ul>

                }
                <div class="socials">
                </div>
                <h1><a><img src="~/Content/images/logo.png" alt="Boo House"></a> </h1>
                <div class="menu_block">
                    <nav id="bt-menu" class="bt-menu">
                        <a href="#" class="bt-menu-trigger"><span>Menu</span></a>
                        <ul>
                            <li class="current bt-icon ">@Html.ActionLink("Trang chủ", "Index", "NhanVien")</li>
                            <li class="bt-icon">@Html.ActionLink("Sảnh", "Sanh", "NhanVien")</li>
                            <li class="bt-icon">@Html.ActionLink("Thực đơn", "ThucDon", "NhanVien")</li>
                            <li class="bt-icon">@Html.ActionLink("Đặt tiệc", "Menu", "NhanVien")</li>
                            <li class="bt-icon">@Html.ActionLink("Đơn đặt", "DonNhan", "NhanVien")</li>
                            <li class="bt-icon">@Html.ActionLink("Tra cứu", "TraCuu", "NhanVien")</li>
                        </ul>
                    </nav>

                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </header>

    <!--==============================Content=================================-->

    <div class="content">
        @RenderBody()
    </div>

    <!--==============================footer=================================-->

    <footer>
        <div class="container_12" style="text-align:center">
            <div class="grid_6 prefix_3">
                <a><img src="~/Content/images/f_logo.png" alt=""></a>
                <div class="copy">
                    &copy; 2013 | <a>Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script>
        $(document).ready(function () {
            $(".bt-menu-trigger").toggle(
                function () {
                    $('.bt-menu').addClass('bt-menu-open');
                },
                function () {
                    $('.bt-menu').removeClass('bt-menu-open');
                }
            );
        })
    </script>
</body>
</html>
