@model DatTiec.Models.DanhGia
@{
    ViewBag.Title = "XoaDanhGia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container">
        <div class="container_12">
            <h2 style="text-align:center;font-size:25px;color:red;font-weight:bold">XÁC NHẬN THÔNG TIN ĐÁNH GIÁ CẦN XÓA</h2>

            <h3 style="text-align:center;font-size:20px;color:black;font-weight:bold">Bạn quyết định xóa đánh giá này?</h3>
            <div style="text-align:center; font-size:18px">
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Mã đánh giá:
                        @Html.DisplayFor(model => model.MaDanhGia)
                    </dt>
                    <dt>
                        Khách hàng:
                        @Html.DisplayFor(model => model.HoTen)
                    </dt>
                    <dt>
                        Email:
                        @Html.DisplayFor(model => model.Email)
                    </dt>
                    <dt>
                        Điện thoại:
                        @Html.DisplayFor(model => model.SDT)
                    </dt>
                    <dt>
                        Nội dung:
                        @Html.DisplayFor(model => model.NoiDung)
                    </dt>
                </dl>

                <br />
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa" class="btn btn-default" /> |
                        @Html.ActionLink("Quay lại trang quản lí đánh giá", "DanhGia")
                    </div>
                }

            </div>
        </div>
    </div>
</div>

