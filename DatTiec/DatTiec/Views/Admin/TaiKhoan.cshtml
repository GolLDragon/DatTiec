<script>
    $(document).ready(function () {
        $(".block1").mouseover(function () {
            $(this).addClass("blur");
        });
        $(".block1").mouseout(function () {
            $(this).removeClass("blur");
        });
        $().UItoTop({ easingType: 'easeOutQuart' });
    })
</script>

@model IEnumerable<DatTiec.Models.NhanVien>
@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="head2">Tài khoản nhân viên</h3>
<h2 style="font-size:20px;text-align:center">@Html.ActionLink("Thêm tài khoản", "ThemTK")</h2>
<div class="content">
    <div class="container">
        <div class="container_12">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Mã nhân viên</th>
                        <th>Họ tên</th>
                        <th>Giới tính</th>
                        <th>Ngày sinh</th>
                        <th>Mail</th>
                        <th>Điện thoại</th>
                        <th>Tài khoản</th>
                        <th>Mật khẩu</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaNV)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GioiTinh)
                            </td>
                            <td>
                                @String.Format("{0:dd/MM/yyyy}", item.NgaySinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaiKhoan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatKhau)
                            </td>
                            <td>
                                @Html.ActionLink("Xóa", "XoaTK", new { id = item.MaNV })
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "SuaTK", new { id = item.MaNV })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>



