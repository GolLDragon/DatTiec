@model DatTiec.Models.Sanh

@{
    ViewBag.Title = "ThemSanh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="ic"></div>
    <div class="container_12">
        <div class="grid_12">
            <h3 style="color:red">Thêm sảnh</h3>
        </div>

            @*Them thuoc tinh cho form de upload anh*@
            @using (Html.BeginForm("ThemSanh", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" style="text-align:center;font-size:18px">
                    <h4>Thông tin sảnh</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Tên sảnh:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenSanh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenSanh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        Đơn giá:
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        Mô tả:
                        <div class="col-md-10">
                            <textarea name="MoTa" style="height:100px; width:250px">Mô tả thông tin sản phẩm</textarea>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        Hình:
                        <div class="col-md-10">
                            <input type="file" name="fileupload" />
                            @ViewBag.ThongBao
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <br />
        <br />
            <div style="text-decoration:none;font-size:15px; text-align:center">
                @Html.ActionLink("Quay về danh sách sảnh", "Sanh")
            </div>
        </div>
    </div>


