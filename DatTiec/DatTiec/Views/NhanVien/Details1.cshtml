
@{
    ViewBag.Title = "Details1";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}

<div class="content">
    <div class="ic"></div>
    <div class="container_12">
        <div class="grid_12">
            <h3 class="head2">Thông tin sảnh</h3>

        </div>

        <div class="tabs tb gallery">
            <div class="div-tabs">
                <img src="~/Content/Sanh/@Model.Hinh" style="width:400px;height:250px" />
                <br />
                <br />
                <h4>Tên món: @Model.TenSanh </h4>
                <br />
                <p><span>Mô tả: </span>@Model.MoTa</p>
                <br />
                <p>Giá:<span> @String.Format("{0:0,0}", Model.DonGia) VNĐ </span></p>
                <br />
                <h4 class="bt-icon">@Html.ActionLink("Quay lại trang sảnh", "Sanh", "NhanVien")</h4>
            </div>
        </div>
    </div>
</div>



