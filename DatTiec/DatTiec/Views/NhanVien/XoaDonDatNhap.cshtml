@model DatTiec.Models.DonDatTiecNhap

@{
    ViewBag.Title = "XoaDonDatNhap";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}
<div class="content">
    <div class="container">
        <div class="container_12">
            <h2 style="text-align:center;font-size:25px;color:red;font-weight:bold">XÁC NHẬN THÔNG TIN ĐƠN TIỆC CẦN XÓA</h2>

            <h3 style="text-align:center;font-size:20px;color:black;font-weight:bold">Bạn quyết định xóa đơn tiệc này?</h3>
            <div style="text-align:center; font-size:18px">
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Mã đơn đặt:
                        @Html.DisplayFor(model => model.MaNhap)
                    </dt>
                    <dt>
                        Khách hàng:
                        @Html.DisplayFor(model => model.HoTen)
                    </dt>
                    <dt>
                        Điện thoại:
                        @Html.DisplayFor(model => model.SDT)
                    </dt>
                    <dt>
                        Buổi:
                        @Html.DisplayFor(model => model.Buoi.BuoiToChuc)
                    </dt>
                    <dt>
                        Hình thức:
                        @Html.DisplayFor(model => model.HinhThuc.HinhThucToChuc)
                    </dt>
                    <dt>
                        Ngày đặt:
                        @Html.DisplayFor(model => model.NgayToChuc)
                    </dt>
                    <dt>
                        Địa chỉ:
                        @Html.DisplayFor(model => model.DiaChi)
                    </dt>
                </dl>

                <br />
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa" class="btn btn-default" /> |
                        @Html.ActionLink("Quay lại trang quản lí đơn tiệc", "DonTiecNhap")
                    </div>
                }

            </div>
        </div>
    </div>
</div>



