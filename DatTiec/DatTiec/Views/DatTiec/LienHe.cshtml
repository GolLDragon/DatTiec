@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="content contact">
    <div class="container_12"  style="text-align:center">
        <div class="grid_12">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1959.8623249537602!2d106.66216415602015!3d10.75569160064503!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ef060a28b85%3A0x3de2aa6e933236d!2sParkson+Hung+Vuong!5e0!3m2!1svi!2s!4v1557914544905!5m2!1svi!2s" width="800" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="clear"></div>
        <div class="grid_4">
            <h3 class="head3">Địa chỉ</h3>
            <div class="map">


                <address>
                    <dl>
                        <dt>
                            Restaurant: Classic European Cuisine. <br>
                            126 Đường Hùng Vương,<br>
                            Phường 12, Quận 5, Hồ Chí Minh.
                        </dt>
                        <dd><span>Điện thoại:</span>+1 800 603 6035</dd>
                        <dd><span>Điện thoại:</span>+1 800 889 9898</dd>
                        <dd>E-mail: <a>rest@gmail.com</a></dd>
                        <dd>Skype: <a>Rest123</a></dd>
                    </dl>
                </address>

            </div>
        </div>

        <div class="grid_8">
            <h3 class="head3">Đánh giá</h3>
            <div style="text-align:center">
                @ViewBag.ThongBao1
                @ViewBag.ThongBao2
                @ViewBag.ThongBao3
                @ViewBag.ThongBao4
            </div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="success_wrapper">
                </div>
                <label class="name">
                    <input type="text" placeholder="Họ tên:" data-constraints="Required JustLetters" name="hoten" />
                </label>

                <label class="email">
                    <input type="text" placeholder="E-mail:" data-constraints="Required Email" name="email" />
                </label>
                <label class="phone">
                    <input type="text" placeholder="Số điện thoại:" data-constraints="Required JustNumbers" name="sdt" />
                </label>
                <br />
                <br />
                <label class="message">
                    <textarea placeholder="Nội dung:" data-constraints='Required Length(min=20,max=999999)' name="noidung" style="width:485px;height:100px"></textarea>
                </label>
                <br />
                <input type="submit" value="Gửi">
            }
        </div>
        </div>
</div>




